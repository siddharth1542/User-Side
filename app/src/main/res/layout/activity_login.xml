            <!--    ==========================Main Section======================-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/heading_logo"
                android:layout_marginTop="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                >

            </ImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_welcome_heading"
                android:textSize="@dimen/black_heading_size"
                android:gravity="center_horizontal"
                android:textColor="@color/black_heading"
                android:layout_marginTop="50dp"
                >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                >



                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Your Mobile Number"
                    android:gravity="center_horizontal"
                    >

                </TextView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="20dp"
                    android:weightSum="10"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/custom_layout"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        >
                        <EditText
                            android:id="@+id/edt_mob"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/custom_layout"
                            android:layout_weight="7"
                            android:textSize="18sp"
                            android:lines="1"
                            android:textAlignment="center"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:inputType="number"
                            android:textColor="@color/black_heading"
                            android:hint="Enter Number"
                            android:paddingStart="10dp"
                            >
                        </EditText>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <Button
                    android:id="@+id/send_Otp21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_button"
                    android:text="    Send OTP"
                    android:layout_margin="20dp"
                    android:textSize="18sp"
                    android:textColor="@color/app_white"
                    android:drawableRight="@drawable/forward"
                    android:drawableTint="@color/app_white">
                </Button>

