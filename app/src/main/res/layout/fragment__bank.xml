<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".dashboard_fragment.Fragment_Bank">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:indeterminate="false"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:background="@drawable/circle_shape"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="65" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/app_background"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="Bank Details"
                        android:textColor="@color/black_heading"
                        android:textSize="18dp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="5dp"
                        android:background="@drawable/custom_border_layout"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:layout_width="377dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:text="Account Holder Name"
                                    android:textSize="@dimen/profile_text_heading">

                                </TextView>

                                <EditText
                                    android:id="@+id/edt_AccountName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/custom_edittext"
                                    android:hint="Enter Account Holder Name"
                                    android:paddingStart="10dp"
                                    android:inputType="text"
                                    android:maxLength="30"
                                    android:maxLines="1"
                                    android:textColor="@color/black_heading">

                                </EditText>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bank Account Number"
                                    android:paddingStart="10dp"
                                    android:textSize="@dimen/profile_text_heading"
                                    >

                                </TextView>
                                <EditText
                                    android:id="@+id/edt_AccountNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:hint="Enter Bank Account Number"
                                    android:textColor="@color/black_heading"
                                    android:background="@drawable/custom_edittext"
                                    android:inputType="number"
                                    android:maxLength="30"
                                    android:maxLines="1"
                                    >
                                </EditText>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                >
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Bank IFSC Code"
                                    android:paddingStart="10dp"
                                    android:textSize="@dimen/profile_text_heading"
                                    >

                                </TextView>
                                <EditText
                                    android:id="@+id/edt_IFSC"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="10dp"
                                    android:hint="Enter Bank IFSC Code"
                                    android:textColor="@color/black_heading"
                                    android:background="@drawable/custom_edittext"
                                    android:textAllCaps="true"
                                    android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNM "
                                    android:maxLength="30"
                                    android:maxLines="1"
                                    >
                                </EditText>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="5dp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bank Verify Type"
                                        android:paddingStart="10dp"
                                        android:textSize="@dimen/profile_text_heading"
                                        >
                                    </TextView>
                                    <TextView
                                        android:id="@+id/check_error"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="               Select Any One"
                                        android:paddingStart="10dp"
                                        android:textColor="@color/red"
                                        android:visibility="gone"
                                        android:textSize="@dimen/profile_text_heading"
                                        >
                                    </TextView>
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <CheckBox
                                        android:id="@+id/chk_cheque"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cheque"
                                        >
                                    </CheckBox>
                                    <CheckBox
                                        android:id="@+id/chk_pass"
                                        android:layout_marginStart="20dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Passbook"
                                        >

                                    </CheckBox>
                                </LinearLayout>


                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_margin="10dp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                >

                                <TextView
                                    android:id="@+id/txtPAss"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload: Passbook/Cheque"
                                    android:paddingStart="10dp"
                                    >
                                </TextView>
                                <Button
                                    android:id="@+id/Ac_Browse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Browse"
                                    android:textColor="@color/app_white"
                                    >

                                </Button>
                                <Button
                                    android:id="@+id/Ac_Upload"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="upload"
                                    >

                                </Button>
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_button"
                        android:text="    Save"
                        android:layout_margin="20dp"
                        android:textSize="18sp"
                        android:drawableRight="@drawable/forward"
                        android:drawableTint="@color/app_white"
                        android:textColor="@color/app_white"
                        >
                    </Button>

                </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>